[flake8]
# Maximum line length
max-line-length = 100

# Exclude directories
exclude =
    .git,
    __pycache__,
    .pytest_cache,
    .venv,
    venv,
    env,
    migrations,
    staticfiles,
    media,
    htmlcov,
    .coverage,
    *.egg-info,
    build,
    dist

# Ignore specific errors
ignore =
    # E203: whitespace before ':' (conflicts with black)
    E203,
    # W503: line break before binary operator (conflicts with black)
    W503,
    # E501: line too long (handled by black)
    E501,
    # F401: imported but unused (sometimes needed for __init__.py)
    # F403: unable to detect undefined names (star imports)

# Maximum complexity
max-complexity = 10

# Per-file ignores
per-file-ignores =
    __init__.py:F401,F403
    settings/*.py:E501
    */migrations/*.py:E501

# Show source code for errors
show-source = True

# Show statistics
statistics = True

# Count errors
count = True
