  "item": [
    {
      "name": "Authentication",
      "item": [
        {
          "name": "Request OTP",
          "request": {
            "method": "POST",
            "header": [],
            "body": {
              "mode": "raw",
              "raw": "{\"phone\":\"<phone_number>\"}"
            },
            "url": {
              "raw": "{{baseUrl}}/api/v1/auth/otp/request",
              "host": ["{{baseUrl}}"],
              "path": ["api", "v1", "auth", "otp", "request"]
            }
          },
          "response": []
        },
        {
          "name": "Verify OTP",
          "request": {
            "method": "POST",
            "header": [],
            "body": {
              "mode": "raw",
              "raw": "{\"phone\":\"<phone_number>\", \"otp\":\"<otp>\"}"
            },
            "url": {
              "raw": "{{baseUrl}}/api/v1/auth/otp/verify",
              "host": ["{{baseUrl}}"],
              "path": ["api", "v1", "auth", "otp", "verify"]
            }
          },
          "response": []
        },
        {
          "name": "Refresh Token",
          "request": {
            "method": "POST",
            "header": [],
            "body": {
              "mode": "raw",
              "raw": "{\"refreshToken\":\"<refresh_token>\"}"
            },
            "url": {
              "raw": "{{baseUrl}}/api/v1/auth/refresh",
              "host": ["{{baseUrl}}"],
              "path": ["api", "v1", "auth", "refresh"]
            }
          },
          "response": []
        },
        {
          "name": "Logout",
          "request": {
            "method": "POST",
            "header": [],
            "body": {
              "mode": "raw",
              "raw": "{}"
            },
            "url": {
              "raw": "{{baseUrl}}/api/v1/auth/logout",
              "host": ["{{baseUrl}}"],
              "path": ["api", "v1", "auth", "logout"]
            }
          },
          "response": []
        }
      ]
    },
